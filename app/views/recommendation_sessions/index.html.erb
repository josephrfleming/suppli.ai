<!-- app/views/recommendation_sessions/index.html.erb -->
<h1>Recommendation history</h1>

<!-- 1. Primary navigation buttons-->
<div class="d-flex flex-wrap gap-3 mb-4">
  <%= link_to "← Home", root_path,
              class: "btn btn-outline-secondary" %>

  <%= link_to "New recommendation",
              new_recommendation_session_path,
              class: "btn btn-primary" %>
</div>

<!-- ─ 2. History table / empty-state placeholder -->
<% if @sessions.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th class="text-end">Budget</th>
        <th>Areas of interest</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @sessions.each do |s| %>
        <tr>
          <td><%= l s.created_at, format: :short %></td>
          <td class="text-end">$<%= s.budget %></td>
          <td><%= Array(s.area_of_interest).reject(&:blank?).join(", ") %></td>
          <td class="text-end">
            <%= link_to "View", s, class: "btn btn-sm btn-outline-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted">No past recommendations yet.</p>
<% end %>
